w></view><view class="panel-item"><view>支付方式:</view><view class="panel-value">{{detail.payment===1?"微信支付":"货到付款"}}</view></view><view class="panel-item"><view>下单时间:</view><view class="panel-value">{{detail.createTime}}</view></view><block wx:if="{{detail.tradeStatus===1}}"><view class="panel-item"><view>支付时间:</view><view class="panel-value">{{detail.payTime}}</view></view></block><block wx:if="{{detail.tradeStatus===2}}"><view class="panel-item"><view>发货时间:</view><view class="panel-value">{{detail.sendTime}}</view></view></block><block wx:if="{{detail.tradeStatus===3}}"><view class="panel-item"><view>收货时间:</view><view class="panel-value">{{detail.receiveTime}}</view></view></block><block wx:if="{{detail.tradeStatus===6}}"><view class="panel-item"><view>关闭时间:</view><view class="panel-value">{{detail.closeTime}}</view></view></block></view><view class="card order-wrapper"><view class="panel-item"><view>商品总额:</view><view class="panel-value">{{detail.totalMoney+" 元"}}</view></view><view class="panel-item"><view>商品总数:</view><view class="panel-value">{{'x'+detail.totalNum}}</view></view><view class="panel-item"><view>运费:</view><view class="panel-value">0</view></view></view></view>
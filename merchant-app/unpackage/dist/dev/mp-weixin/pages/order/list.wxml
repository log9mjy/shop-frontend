<view class="page padding"><block wx:if="{{orderList.length!==0}}"><view><block wx:for="{{orderList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['linkDetail',['$event']]]]]}}" class="card order-item" bindtap="__e"><view class="order-top"><view class="order-no">{{item.orderNo}}</view><view class="order-status">待付款</view></view><view><block wx:for="{{item.orderItems}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="goods-wrapper"><image class="goods-pic" src="{{item.coverPic}}"></image><view style="margin-left:20rpx;"><view class="goods-title">{{item.title}}</view><view class="goods-price"><view>{{'¥ '+item.price}}</view><view class="goods-num">{{"共 "+item.num+" 件"}}</view></view></view></view></block></view><view class="order-operate"><view class="total-price">{{'总计: '+('¥ '+item.total)+''}}</view><view class="button-view"><block wx:if="{{item.tradeStatus===0}}"><view data-event-opts="{{[['tap',[['closeOrder',['$event']]]]]}}" class="close-button button center-xy" bindtap="__e">关闭</view></block><block wx:if="{{item.tradeStatus===0}}"><view data-event-opts="{{[['tap',[['pay',['$event']]]]]}}" class="buy-button button center-xy" bindtap="__e">付款</view></block><block wx:if="{{item.tradeStatus===2}}"><view data-event-opts="{{[['tap',[['receive',['$event']]]]]}}" class="close-button button center-xy" bindtap="__e">收货</view></block></view></view></view></block></view></block><block wx:if="{{orderList.length===0}}"><view class="empty-page"><view class="empty-container"><image class="empty-icon" src="../../static/image/empty-order.png"></image><text class="empty-tips">暂时还没有订单</text></view></view></block></view>